<mvc:View 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="myCompany.myApp.controller.Create"
	xmlns:smartForm="sap.ui.comp.smartform" 
	xmlns:smartField="sap.ui.comp.smartfield">
	<Page 
		id="smartFormPage" 
		title="Product" 
		enableScrolling="false">
		<content>
			<smartForm:SmartForm 
				id="smartForm"
				editTogglable="true" 
				title="创建问题"
				flexEnabled="false"
				>
				<smartForm:Group label="问题反馈">
					<smartForm:GroupElement>
						<smartField:SmartField value="{Title}" />
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{Ztypt}" />
						<smartField:SmartField value="{Zmodule}" />
					</smartForm:GroupElement>
					<smartForm:GroupElement elementForLabel="1">
						<smartField:SmartField value="{Mail}" />
						<smartField:SmartField value="{Phone}" />
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:Smart value="{Description}"/>
					</smartForm:GroupElement>
				</smartForm:Group>
				
			</smartForm:SmartForm>
		</content>
	</Page>
</mvc:View>